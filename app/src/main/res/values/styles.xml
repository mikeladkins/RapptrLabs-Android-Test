<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Theme for the splash screen activity -->
    <style name="SplashTheme">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="MainActivityButton" parent="Theme.AppCompat.NoActionBar">
        <item name="background">@drawable/main_activity_button</item>
    </style>

    <style name="FadeLoginButton">
        <item name="android:background">@drawable/login_fade_buttons</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/button_text</item>
    </style>

    <style name="LoginEditTexts">
        <item name="colorControlNormal">@color/login_edit_text_lines</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
